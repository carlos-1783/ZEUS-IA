# ===== NETLIFY DEPLOYMENT VARIABLES =====
# Copia estas variables en Netlify Dashboard:
# Site settings > Environment variables > Add a variable

# ===== APLICACIÓN =====
VITE_APP_NAME=ZEUS-IA
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=production
VITE_COMPANY_NAME=ZEUS-IA
VITE_SUPPORT_EMAIL=support@zeus-ia.com

# ===== BACKEND API =====
VITE_API_URL=https://zeus-ia-production.up.railway.app
VITE_API_BASE_URL=https://zeus-ia-production.up.railway.app/api/v1

# ===== CONFIGURACIÓN =====
VITE_DEBUG=false
VITE_LOG_LEVEL=info
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# ===== INTERNACIONALIZACIÓN =====
VITE_DEFAULT_LANGUAGE=es
VITE_SUPPORTED_LANGUAGES=es,en

# ===== TEMA =====
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# ===== CORS =====
# NOTA: Cambia esto después del primer deploy con la URL real de Netlify
# Ejemplo: https://zeus-ia.netlify.app
VITE_CORS_ORIGINS=https://YOUR-SITE-NAME.netlify.app

