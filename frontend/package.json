{
  "name": "zeus-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:clean": "powershell -ExecutionPolicy Bypass -File scripts/cleanup-port.ps1 && vite",
    "dev:start": "powershell -ExecutionPolicy Bypass -File start-dev.ps1",
    "dev:clean-sw": "powershell -ExecutionPolicy Bypass -File scripts/cleanup-sw.ps1",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "serve dist -s -p $PORT",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "electron": "vite build && electron .",
    "cleanup": "powershell -ExecutionPolicy Bypass -File scripts/kill-port.ps1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/vue-fontawesome": "^3.0.6",
    "@types/three": "^0.180.0",
    "@vueuse/head": "^2.0.0",
    "axios": "^1.6.2",
    "chart.js": "^4.5.0",
    "date-fns": "^4.1.0",
    "is-number": "^7.0.0",
    "jwt-decode": "^4.0.0",
    "pinia": "^2.1.7",
    "socket.io-client": "^4.7.2",
    "three": "^0.180.0",
    "uuid": "^11.1.0",
    "vue": "^3.3.11",
    "vue-router": "^4.2.5",
    "vue3-toastify": "^0.2.8"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/http-proxy": "^1.17.16",
    "@types/node": "^20.10.5",
    "@types/socket.io-client": "^3.0.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "eslint": "^8.54.0",
    "eslint-plugin-vue": "^9.17.0",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "postcss-preset-env": "^9.6.0",
    "prettier": "^3.1.0",
    "rollup-plugin-visualizer": "^5.9.2",
    "sass": "^1.91.0",
    "serve": "^14.2.5",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.3.2",
    "vite": "^4.5.14",
    "vite-plugin-compression2": "^0.5.0",
    "vite-plugin-pwa": "^0.16.7",
    "vue-tsc": "^1.8.22"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-recommended",
      "@vue/typescript/recommended",
      "@vue/prettier",
      "@vue/prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "vue/multi-word-component-names": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}
