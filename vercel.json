{
  "version": 2,
  "name": "zeus-ia-frontend-3d",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://zeus-ia-production.up.railway.app/api/v1",
    "VITE_APP_NAME": "ZEUS-IA",
    "VITE_ENVIRONMENT": "production",
    "VITE_DEBUG": "false",
    "VITE_LOG_LEVEL": "info",
    "VITE_ENABLE_ANALYTICS": "true",
    "VITE_ENABLE_ERROR_REPORTING": "true",
    "VITE_ENABLE_DARK_MODE": "true",
    "VITE_DEFAULT_THEME": "light",
    "VITE_DEFAULT_LANGUAGE": "es",
    "VITE_SUPPORTED_LANGUAGES": "es,en",
    "VITE_SUPPORT_EMAIL": "support@zeus-ia.com",
    "VITE_COMPANY_NAME": "Tecnolog√≠as ZEUS",
    "VITE_APP_VERSION": "1.0.0"
  },
  "functions": {
    "frontend/dist/**": {
      "runtime": "nodejs18.x"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
